{
  "name": "fin-tracker",
  "version": "1.1.1",
  "description": "A financial tracker.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf .parcel-cache .cache dist out",
    "build:dev:background": "parcel ./src/background/background.html --target electron -p 4321",
    "build:dev:renderer": "parcel ./src/renderer/renderer.html --target electron",
    "build:dev": "tsc && concurrently \"npm run build:dev:renderer\" \"npm run build:dev:background\"",
    "build:background": "parcel build ./src/background/background.html --target electron",
    "build:renderer": "parcel build ./src/renderer/renderer.html --target electron",
    "build": "tsc && concurrently \"npm run build:renderer\" \"npm run build:background\"",
    "start": "concurrently \"npm run build:dev:renderer\" \"electron ./dist/index.js --dev\"",
    "dev": "electron ./dist/index.js --dev",
    "prod": "electron .",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "precommit": "npm run lint && npm test",
    "make": "electron-forge make",
    "test": "jest",
    "test:dev": "jest --watch"
  },
  "author": "Dustin Jensen",
  "license": "ISC",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "evergreen-ui": "^6.4.0",
    "immer": "^9.0.6",
    "lodash.debounce": "^4.0.8",
    "moment": "^2.29.4",
    "react": "^17.0.2",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.2",
    "react-portal": "^4.2.1",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "recharts": "^2.0.9",
    "redux": "^4.1.0",
    "redux-electron-ipc": "^1.2.0",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.2",
    "concurrently": "^6.2.0",
    "electron": "^13.3.0",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^27.0.6",
    "jest-circus": "^27.0.6",
    "parcel": "^2.0.0-beta.2",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/assets/ft.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fin_tracker"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupFiles": [
      "raf/polyfill"
    ],
    "testRegex": "src/**/.*\\.spec\\.(ts|tsx)$",
    "snapshotSerializers": [
      "enzyme-to-json"
    ]
  },
  "targets": {
    "electron": {
      "context": "electron-renderer",
      "publicUrl": "."
    }
  },
  "volta": {
    "node": "14.21.3"
  }
}
