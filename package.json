{
  "name": "fin-tracker",
  "version": "1.0.2-beta",
  "description": "A financial tracker.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf .cache dist out",
    "build:background": "node ./src/background/background.config.js",
    "build:renderer": "node ./src/renderer/renderer.config.js",
    "build": "tsc && concurrently \"npm run build:renderer\" \"npm run build:background\"",
    "start": "concurrently \"npm run build:renderer\" \"electron ./dist/index.js --dev\"",
    "dev": "electron ./dist/index.js --dev",
    "prod": "electron .",
    "prettier": "prettier --write src/**/*.{ts,tsx,js,jsx}",
    "eslint": "eslint src/**/*.{ts,tsx,js,jsx}",
    "eslint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "precommit": "npm run prettier && npm run eslint && npm test",
    "make": "electron-forge make",
    "test": "jest",
    "test:dev": "jest --watch"
  },
  "author": "Dustin Jensen",
  "license": "ISC",
  "dependencies": {
    "@rehooks/local-storage": "2.4.0",
    "electron-squirrel-startup": "1.0.0",
    "electron-store": "5.1.1",
    "evergreen-ui": "6.1.0",
    "immer": "6.0.1",
    "lodash.debounce": "4.0.8",
    "moment": "2.22.2",
    "react": "16.13.0",
    "react-color": "2.18.0",
    "react-dom": "16.13.0",
    "react-portal": "4.1.5",
    "react-redux": "7.2.0",
    "react-router-dom": "5.1.2",
    "recharts": "1.8.5",
    "redux": "4.0.0",
    "redux-electron-ipc": "1.1.12",
    "reselect": "4.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.50",
    "@electron-forge/maker-deb": "6.0.0-beta.50",
    "@electron-forge/maker-rpm": "6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "6.0.0-beta.50",
    "@electron-forge/maker-zip": "6.0.0-beta.50",
    "@types/enzyme": "3.10.7",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "26.0.14",
    "@types/node": "12.12.30",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/react-redux": "7.1.7",
    "@types/react-router-dom": "5.1.3",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "concurrently": "3.6.1",
    "electron": "8.2.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.5",
    "enzyme-to-json": "3.5.0",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-react": "7.19.0",
    "jest": "26.4.2",
    "jest-circus": "26.4.2",
    "node-sass": "4.14.1",
    "parcel-bundler": "1.12.4",
    "prettier": "1.19.1",
    "raf": "3.4.1",
    "rimraf": "2.6.2",
    "ts-jest": "26.4.0",
    "typescript": "3.8.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/assets/ft.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fin_tracker"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupFiles": [
      "raf/polyfill"
    ],
    "testRegex": "src/**/.*\\.spec\\.(ts|tsx)$",
    "snapshotSerializers": [
      "enzyme-to-json"
    ]
  }
}
